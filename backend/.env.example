# Exemple .env Backend (FR) — à copier en .env

NODE_ENV=production
PORT=4000

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/trivida
# Délais de connexion (ms)
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=20000
# DEV uniquement si nécessaire (certificats TLS invalides)
# MONGODB_TLS_INSECURE=0

# JWT
JWT_ACCESS_SECRET=changez-moi
JWT_REFRESH_SECRET=changez-moi
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7
BCRYPT_SALT_ROUNDS=12

# API
BASE_CURRENCY=XAF
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Expo Push (optionnel)
EXPO_ACCESS_TOKEN=

# Cron sécurisé
CRON_SECRET=changez-moi

# CinetPay
CINETPAY_BASE_URL=https://api-checkout.cinetpay.com/v2
CINETPAY_SITE_ID=
CINETPAY_API_KEY=
CINETPAY_NOTIFY_URL=
CINETPAY_RETURN_URL=
API_PUBLIC_BASE_URL=

# Premium
PREMIUM_PRICE_XAF=2000

# Intégrations externes (optionnelles)
EXCHANGE_RATE_BASE_URL=https://api.exchangerate.host
FX_CACHE_TTL_HOURS=12
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
OPENWEATHER_API_KEY=
WEATHER_CACHE_TTL_HOURS=1
TIMEZONEDB_API_KEY=
TIMEZONE_CACHE_TTL_DAYS=30
RESERVED_SLUGS=admin,login,api,public,assets
