# Fichier d’environnement Backend (.env) — exemple FR
# Copiez/renommez ce fichier en ".env" à la racine de backend/

# Mode & port
NODE_ENV=development
PORT=4000

# Base de données MongoDB (obligatoire)
MONGODB_URI=mongodb://localhost:27017/trivida

# Sécurité JWT (obligatoire — changez ces valeurs en prod)
JWT_ACCESS_SECRET=changez-moi
JWT_REFRESH_SECRET=changez-moi
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7
BCRYPT_SALT_ROUNDS=12

# API — configuration générale
BASE_CURRENCY=XAF
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Intégrations externes (optionnelles)
EXCHANGE_RATE_BASE_URL=https://api.exchangerate.host
FX_CACHE_TTL_HOURS=12
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
OPENWEATHER_API_KEY=
WEATHER_CACHE_TTL_HOURS=1
TIMEZONEDB_API_KEY=
TIMEZONE_CACHE_TTL_DAYS=30
RESERVED_SLUGS=admin,login,api,public,assets

# Expo (optionnel — accès API push Expo)
EXPO_ACCESS_TOKEN=

# Cron sécurisé (obligatoire pour /cron/*)
CRON_SECRET=changez-moi

# OAuth (si utilisé)
GOOGLE_OAUTH_CLIENT_ID_ANDROID=
GOOGLE_OAUTH_CLIENT_ID_IOS=
GOOGLE_OAUTH_CLIENT_ID_WEB=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
APPLE_BUNDLE_ID=
APPLE_AUDIENCE=

# Paiements — CinetPay (obligatoire en prod pour créer des liens de paiement)
CINETPAY_BASE_URL=https://api-checkout.cinetpay.com/v2
CINETPAY_SITE_ID=
CINETPAY_API_KEY=
# URL publique du webhook (ou utilisez API_PUBLIC_BASE_URL pour la construire)
CINETPAY_NOTIFY_URL=
# Optionnel: URL de retour
CINETPAY_RETURN_URL=
# Optionnel: base publique API (ex: https://api.trivida.cg)
API_PUBLIC_BASE_URL=

# Premium
# Prix mensuel en XAF (défaut 2000)
PREMIUM_PRICE_XAF=2000
